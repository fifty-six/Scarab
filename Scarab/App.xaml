<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Scarab"
             x:Class="Scarab.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Resources>
        <FontFamily x:Key="InterFont">avares://Avalonia.Fonts.Inter/Assets#Inter</FontFamily>
        <SolidColorBrush x:Key="ToggleSwitchContainerCheckedDefaultBackground" Color="{DynamicResource SemiBlue4Color}" />
        <SolidColorBrush x:Key="ToggleSwitchContainerCheckedPointeroverBackground" Color="{DynamicResource SemiBlue5Color}" />
        <SolidColorBrush x:Key="ToggleSwitchContainerCheckedPressedBackground" Color="{DynamicResource SemiBlue6Color}" />
    </Application.Resources>
    <Application.Styles>
        <SimpleTheme/> 
        <StyleInclude Source="avares://Semi.Avalonia/Themes/Index.axaml" />
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="{StaticResource InterFont}"/>
        </Style>
    </Application.Styles>
    
    
    <Application.RequestedThemeVariant>Dark</Application.RequestedThemeVariant>
</Application>
